<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PCACalc.Views.PCAvsInjPage" xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:inputLayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="clr-namespace:Syncfusion.SfNumericTextBox.XForms;assembly=Syncfusion.SfNumericTextBox.XForms"
    Title="Infusions And Injections" mc:Ignorable="d">
    <ContentPage.Resources>
        <Style x:Key="OrderEntryBox" TargetType="syncfusion:SfNumericTextBox">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Picker x:Name="MedicationPicker" Title="-- Select Injectable --" ItemDisplayBinding="{Binding FullMedName}" ItemsSource="{Binding medicationList}" SelectedIndexChanged="MedicationPicker_SelectedIndexChanged" />
                <Picker x:Name="PCAPicker" Title="-- Select PCA --" ItemDisplayBinding="{Binding PCAFullName}" ItemsSource="{Binding pcaList}" SelectedIndexChanged="PCAPicker_SelectedIndexChangedAsync" />

                <Grid Padding="1" RowSpacing="1" VerticalOptions="Start">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" Text="ATC Order"
                        VerticalOptions="Center" />
                    <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="0" Hint="ATC MG" InputViewPadding="0,10">
                        <syncfusion:SfNumericTextBox
                            x:Name="EntryATCmg" FormatString="0.## mg" MaximumNumberDecimalDigits="2" SelectAllOnFocus="True"
                            Style="{StaticResource OrderEntryBox}"
                            ValueChanged="RunCalcs" Value="0" />
                    </inputLayout:SfTextInputLayout>

                    <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="1" Hint="Hours" InputViewPadding="0,10">
                        <syncfusion:SfNumericTextBox
                            x:Name="EntryATCHours" Maximum="24" MaximumNumberDecimalDigits="0" Minimum="1"
                            SelectAllOnFocus="True"
                            Style="{StaticResource OrderEntryBox}"
                            ValueChanged="RunCalcs" Value="1" />
                    </inputLayout:SfTextInputLayout>
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="End">
                        <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Label FontSize="Small" Text="Mg Per Hour:" />
                            <Label x:Name="LabelATCMGPerHour" FontSize="Small" />
                        </StackLayout>
                        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                            <Label FontSize="Small" Text="Vials Per Day:" />
                            <Label x:Name="LabelATCVialsPerDay" FontSize="Small" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <Label FontSize="Small" Text="Cost Per Day:" />
                            <Label x:Name="LabelATCCostPerDay" FontSize="Small" />
                        </StackLayout>
                    </Grid>
                </Grid>

                <Grid Padding="1" RowSpacing="1" VerticalOptions="Start">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <BoxView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="{StaticResource BrandGrayDark}" />
                    <Label
                        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" Text="PRN Order"
                        VerticalOptions="Center" />
                    <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="0" Hint="PRN MG" InputViewPadding="0,10">
                        <syncfusion:SfNumericTextBox
                            x:Name="EntryPRNmg" FormatString="0.## mg" MaximumNumberDecimalDigits="2" SelectAllOnFocus="True"
                            Style="{StaticResource OrderEntryBox}"
                            ValueChanged="RunCalcs" Value="0" />
                    </inputLayout:SfTextInputLayout>

                    <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="1" Hint="Hours" InputViewPadding="0,10">
                        <syncfusion:SfNumericTextBox
                            x:Name="EntryPRNHours" Maximum="24" MaximumNumberDecimalDigits="0" Minimum="1"
                            SelectAllOnFocus="True"
                            Style="{StaticResource OrderEntryBox}"
                            ValueChanged="RunCalcs" Value="1" />
                    </inputLayout:SfTextInputLayout>
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="End">
                        <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Label FontSize="Small" Text="Mg Per Hour:" />
                            <Label x:Name="LabelPRNMGPerHour" FontSize="Small" />
                        </StackLayout>
                        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                            <Label FontSize="Small" Text="Vials Per Day:" />
                            <Label x:Name="LabelPRNVialsPerDay" FontSize="Small" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <Label FontSize="Small" Text="Cost Per Day:" />
                            <Label x:Name="LabelPRNCostPerDay" FontSize="Small" />
                        </StackLayout>
                    </Grid>
                </Grid>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Units per day:" />
                    <Label x:Name="LabelUnitsPerDay" Text="0" />
                </StackLayout>

                <ListView
                    x:Name="PCAsListView" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    ItemSelected="PCAsListView_ItemSelected"
                    ItemsSource="{Binding pcasandbags}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Label Grid.Column="0" Text="{Binding PCASize, StringFormat='{0} ml'}" />
                                    <Label Grid.Column="1" Text="{Binding PCAPrice, StringFormat='{0:C}'}" />
                                    <Label Grid.Column="2" Text="{Binding PCAPricePerUnit, StringFormat='{0:C}'}" />
                                    <Label x:Name="labelPCAID" Grid.Column="0" IsVisible="False" Text="{Binding PCABagID}" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>